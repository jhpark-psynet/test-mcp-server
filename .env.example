# =============================================================================
# Environment Configuration Template
# =============================================================================
# 이 파일을 복사하여 .env.production 또는 .env.development를 생성하세요.
# 절대로 실제 API 키를 이 파일에 입력하지 마세요!
#
# 사용법:
#   cp .env.example .env.production
#   chmod 600 .env.production
#   # 그 후 실제 값으로 수정
# =============================================================================

# =============================================================================
# HTTP Server Configuration
# =============================================================================

HTTP_HOST=0.0.0.0
HTTP_PORT=8000

# =============================================================================
# Logging Configuration
# =============================================================================

# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/server.log

# =============================================================================
# CORS Configuration (보안)
# =============================================================================
# 허용할 도메인을 쉼표로 구분하여 입력
# 프로덕션에서는 반드시 특정 도메인만 허용하세요!
# 예: https://example.com,https://app.example.com

CORS_ALLOW_ORIGINS=https://your-domain.com

# =============================================================================
# Sports API Configuration
# =============================================================================

SPORTS_API_BASE_URL=https://data.psynet.co.kr
# API 키는 환경 변수로 설정하거나, 이 파일에 직접 입력 후 권한 설정 (chmod 600)
SPORTS_API_KEY=your-api-key-here
SPORTS_API_TIMEOUT_S=10.0

# Mock 데이터 사용 여부 (true: 테스트용, false: 실제 API 사용)
USE_MOCK_SPORTS_DATA=false

# =============================================================================
# External API Configuration (선택)
# =============================================================================

EXTERNAL_API_BASE_URL=
EXTERNAL_API_KEY=

# =============================================================================
# Rate Limiting Configuration (보안)
# =============================================================================

# 분당 최대 요청 수 (기본: 60)
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Build Configuration
# =============================================================================

BASE_URL=https://your-domain.com/assets
