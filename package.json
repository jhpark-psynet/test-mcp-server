{
  "name": "test-mcp-server",
  "version": "1.0.0",
  "description": "MCP server with React components using FastMCP and OpenAI Apps SDK",
  "scripts": {
    "install:all": "npm run install:components && npm run install:server",
    "install:components": "cd components && npm install",
    "install:server": "uv pip install -r server/requirements.txt",
    "build": "cd components && npm run build",
    "build:verify": "cd components && npm run verify",
    "build:watch": "cd components && npm run build:watch",
    "serve": "cd components && npm run serve",
    "server": ".venv/bin/uvicorn server.main:app --host 0.0.0.0 --port 8000 --reload",
    "dev": "npm run build && npm run server"
  },
  "keywords": [
    "mcp",
    "fastmcp",
    "openai",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
